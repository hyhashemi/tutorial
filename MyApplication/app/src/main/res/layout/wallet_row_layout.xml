<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/wallet_row"
    android:orientation="horizontal"
    android:layout_height="64dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_monetization_on_black_24dp"
        android:layout_marginRight="@dimen/margin_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="start"
            android:textSize="@dimen/up_text_size"
            android:textColor="#de000000"
            android:id="@+id/textView_name_wallet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="start"
            android:textSize="@dimen/bottom_text_size"
            android:textColor="#99000000"
            android:id="@+id/textView_balance_wallet"/>

    </LinearLayout>

</LinearLayout>